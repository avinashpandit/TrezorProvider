    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM NEMTest",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "nemTest"
            ],
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": { 
                "TZ" : "UTC",
                "NODE_DEBUG_OPTION" : "--inspect"
             },
             "console": "integratedTerminal",
        }
    ]
}